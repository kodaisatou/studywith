<div class="text-center mb-5">
  <h1>質問詳細</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <div class="text-center">
      <div>
        <span class="text-dark"><%= @question.user.name %> <%= @question.created_at.strftime '%Y/%m/%d' %></span>
      </div>
      <div>
        <p><%= @question.content %></p>
      </div>
    </div> 
  </div>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <div class="text-center">
      <div>
        <% @question.answers.each do |answer| %>
          <span class="text-dark"><%= answer.user.name %> <%= answer.created_at.strftime '%Y/%m/%d' %></span>
          <p><%= answer.content %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
  
<div class="row">
  <div class="col-sm-8 offset-sm-2 text-center">
    <%= form_with(model: [@question, @answer]) do |f| %>
      <div class="mb-4">
        <%= f.text_area :content, class: 'form-control', rows:8 %>
      </div>
      <%= f.submit '回答する', class: 'btn btn-primary w-50' %>
    <% end %>
  </div>
</div>

