<div class="row">
  <div class="col-sm-4">
    <div class="card">
      <h4>
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, {size: 100}) %> alt=">
        <%= @user.name %>
      </h4>
    </div>
    <%= render 'relationships/follow_button', user: @user %>
  </div>
<div class="col-sm-8">
  <ul class="nav nav-tabs nav-justified mb-3">
    <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー <span class="badge bg-secondary"><%= @count_followings %></span></a></li>
    <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー <span class="badge bg-secondary"><%= @count_followers %></span></a></li>
  </ul>
  <div class="col-sm-8">
    <%= link_to '質問', user_path(@user), class: 'btn btn-primary' %><%= @count_questions %>
    <%= link_to 'お気に入り', favorite_questions_user_path(@user), class: 'btn btn-primary' %><%= @count_favorite_questions %>
  </div>
<% if @questions.any? %>
  <div>
    <% @questions.each do |question| %>
      <div class="col-sm-6 offset-sm-3">
        <div>
          <div class="border">
            <%= link_to simple_format(question.content), question %>
          </div>
          <div class="mb-3">
            <%= link_to question.user.name, user_path(question.user) %><span class="text-dark text-left"> <%= question.created_at.strftime '%Y/%m/%d' %></span>
          </div>
        </div>
        <div>
          <% if current_user == question.user %>
            <%= link_to "Delete", question, method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-danger btn-sm' %>
          <% end %>
          <%= render 'favorites/favorite_button', question: question %>
        </div>
      </div>
    <% end %>
  </div>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>
</div>
